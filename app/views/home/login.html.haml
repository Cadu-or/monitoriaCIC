%main{:class => "container",role => main}
  %div{:class => "col"}
    %h3{:class => "text-center"} Login
    %a{:class => "text-center", :href=> "/"} Voltar à página inicial
    %br
    - if flash[:notice]
      #notice.message = flash[:notice]
    =form_tag home_logar_path, method => :post do
      %div{:class => "form-group"}
        =label :aluno, :email, "E-mail:"
        =email_field :aluno, :email, :class => "form-control"
      %div{:class => "form-group"}
        =label :aluno, :senha, "Senha"
        =password_field :aluno, senha
      %div{:class => "text-right"}
        = submit_tag 'Entrar', :class => "btn btn-primary"
